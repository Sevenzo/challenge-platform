<% unless @challenge.latest_contributions.empty? %>
  <div id='challenge-featured'>
    <div class="container">
      <div class='row'>
        <div class='col-md-10 col-md-offset-1'>

          <h2 class="text-center">Newest contributions from <%= challenge.title %></h2>

          <div class='row'>
            <% challenge.latest_contributions.each do |latest| %>
              <%= render file: "#{latest.class.name.pluralize.downcase}/card", locals: eval("{ #{latest.class.name.downcase}: latest }") %>
            <% end %>
          </div>

          <div class='text-center center-block'>
            <%= link_to "Show More", challenge_active_stage_path(challenge), class: 'btn btn-lg btn-longer btn-rounded btn-info', 'du-smooth-scroll' => 'true' %>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
