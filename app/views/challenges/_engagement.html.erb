<div id='challenge-engagement'>
  <div class='container'>
    <div class='row'>

      <div class='col-md-6'>
        <div class="well engagement left">
          <div>
            <%= link_to "https://s3-us-west-2.amazonaws.com/sevenzo-production/challenge/1/BelongingChallengeToolkit.zip", target: "_blank", id: "download-image" do %>
              <%= image_tag "speech_bubble.png", width: '100%' %>
            <% end %>
          </div>
          <div class="padding-vertical-xxl">
            <div class='description text-center text-large text-white'>Share what belonging means to you. #edubelong</div>
            <div class='text-center center-block'>
              <%= link_to "Download the Toolkit here", "https://s3-us-west-2.amazonaws.com/sevenzo-production/challenge/1/BelongingChallengeToolkit.zip", target: "_blank", id: "download-button", class: 'btn btn-lg btn-rounded btn-longer btn-info half-margin-bottom btn-cta-right' %>
            </div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class="well engagement left">
          <div>
            <% event_url = 'https://www.eventbrite.com/e/sevenzo-live-student-chat-how-teachers-foster-belonging-in-schools-tickets-30256805921' %>
            <%= link_to event_url, target: "_blank", id: "event-image" do %>
              <%= image_tag "https://pbs.twimg.com/media/CzlFgoyVIAAWwpR.jpg", width: '100%' %>
            <% end %>
          </div>
          <div class="padding-vertical-xxl" style="margin-top: 33px;">
            <div class='description text-center text-large text-white'>Discuss strategies that work with fellow educators</div>
            <div class='text-center center-block'>
              <%= link_to "Register here!", event_url, target: "_blank", id: "event-button", class: 'btn btn-lg btn-rounded btn-longer btn-info half-margin-bottom btn-cta-right' %>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
