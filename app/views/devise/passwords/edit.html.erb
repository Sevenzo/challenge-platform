<div class='auth-screen'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-10 col-sm-offset-1'>

        <div class='well well-auth'>
          <h2 class='section-title'>
            Update Your Password
            <%= link_to new_user_session_path, class: 'pull-right auth-cancel' do %>
              <i class='fa fa-close'></i>
            <% end %>
          </h2>
          <p class='auth-switch text-center'>
            Not working? <%= link_to "Reset your password.", new_user_password_path %>
          </p>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <div class='row row-errors'>
              <div class='col-sm-8 col-sm-offset-2'>
                <%= devise_error_messages! %>
              </div>
            </div>

            <div class='row row-fields'>
              <div id='email' class='col-sm-8 col-sm-offset-2'>
                <div class='form-group'>
                  <%= f.label :password, "Choose new password" %>
                  <%= f.password_field :password, required: true, autofocus: true, autocomplete: "off", class: 'form-control input-lg' %>
                </div>

                <div class='form-group'>
                  <%= f.label :password_confirmation, "Confirm new password" %>
                  <%= f.password_field :password_confirmation, required: true, autocomplete: "off", class: 'form-control input-lg' %>
                </div>
              </div>
            </div>

            <div class='row row-actions'>
              <div class='col-sm-6 col-sm-offset-3'>
                <%= f.submit "Update Password", class: 'btn btn-info btn-block btn-lg' %>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
