<p class='auth-switch text-center'>Don't have an account? <%= switch_link %></p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.hidden_field :remember_me, value: true %>

  <div class='row row-fields'>
    <div id='email' class='col-sm-8 col-sm-offset-2'>
      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, required: true, class: 'form-control input-lg' %>
      </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, required: true, autocomplete: 'off', class: 'form-control input-lg' %>
        <p class='auth-helper'><%= link_to "Forgot your password?", new_user_password_path %></p>
      </div>
    </div>
  </div>

  <div class='row row-actions'>
    <div class='col-sm-2 col-sm-offset-4'>
      <%= link_to 'Cancel', cancel_path, class: 'btn btn-default btn-block btn-rounded' %>
    </div>
    <div class='col-sm-2'>
      <%= f.submit "Sign In", class: 'btn btn-info btn-block btn-rounded' %>
    </div>
  </div>

  <h2 class='text-center'>– OR –</h3>

  <div class='row row-fields'>
    <div id='oauth' class='col-sm-8 col-sm-offset-2'>
      <div class='form-group'>
        <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-block btn-lg btn-social btn-facebook" do %>
           <span class="fa fa-facebook"></span> Sign in with Facebook
        <% end %>
      </div>
    </div>
  </div>

<% end %>
