<div class='auth-screen'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-10 col-sm-offset-1'>

        <div class='well well-auth'>

          <h2 class='section-title'>
            Sign In
            <%= link_to root_path, class: 'pull-right auth-cancel' do %>
              <i class='fa fa-close'></i>
            <% end %>
          </h2>

          <%= render partial: 'devise/sessions/form', locals: { switch_link: link_to("Sign Up.", new_user_registration_path) }, cache: true %>
        </div>

      </div>
    </div>
  </div>
</div>
