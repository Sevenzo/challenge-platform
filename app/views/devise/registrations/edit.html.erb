<% if @setting == 'onboard' %>
  <div class='auth-screen'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-8 col-sm-offset-2'>

          <div class='well well-auth'>

            <h2 class='section-title'>
              Welcome to <%= ENV.fetch('APP_NAME') %>!
              <br>
              <small>
                Please tell us a bit more about yourself.
                &nbsp;
                <%= link_to 'Skip', root_path, class: 'text-xsmall text-lighter text-link' %>
              </small>
            </h2>

            <div class='row'>
              <div class='col-sm-8 col-sm-offset-2'>
                <%= render partial: 'devise/registrations/forms/profile', locals: { btn_text: 'Save and Continue' }, cache: true %>
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
<% else %>
  <%= render partial: "devise/registrations/headers/#{@setting}", cache: true %>

  <div id='user-edit' ng-controller='UserCtrl'>
    <div class='container'>
      <div class='row'>
        <div class='col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3'>

          <div class='row'>
            <div class='col-sm-10 col-sm-offset-1'>
              <%= render partial: "devise/registrations/forms/#{@setting}", cache: true %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>
