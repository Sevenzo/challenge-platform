<%= render partial: 'users/header', cache: true %>

<div id='user-overview'>
  <div class='container'>
    <div class='row'>
      <div class='col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2'>

        <div class="row">
          <div class='col-sm-10 col-sm-offset-1'>
            <table class="table table-borderless">
              <% submissions(@user, current_user).each do |submission| %>
                <%= render partial: 'users/cards/submission', locals: { submission: submission }, cache: true %>
                <tr style='height:1em'></tr>
              <% end %>
            </table>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
