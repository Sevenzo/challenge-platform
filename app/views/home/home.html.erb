<div id='landing-splash' style="background-image:url('<%= asset_path("Home_hero970.png") %>')">
  <div class='opacity-content'>
    <div class='container'>
      <div class='row'>
        <div class='col-md-6 col-md-offset-3'>

          <h1 class="headline">Where Educators Lead Change</h1>

          <% if @challenge %>
            <% if user_signed_in? %>
              <% btn_path = challenge_active_stage_path(@challenge); btn_text = "Return to Challenge" %>
            <% else %>
              <% btn_path = challenges_path; btn_text = "See Our First Challenge" %>
            <% end %>
          <% else %>
            <% btn_path = about_path; btn_text = "Learn More" %>
          <% end %>

          <div class='text-center center-block'>
            <%= link_to btn_text, btn_path, class: 'btn btn-lg btn-rounded btn-longer btn-info half-margin-bottom ' %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

<div id='landing-stages'>
  <div class='container padding-xxxl-vertical'>
    <div class='row'>
      <div class='col-md-10 col-md-offset-1'>

        <p class='section-description text-xlarge' style='margin-bottom:2em;'>This is a space where educators, like you, tackle big challenges, exchange ideas that work and get support to implement those ideas across communities. Our challenges go through four phases:</p>

        <%= render partial: 'home/stages' %>

      </div>
    </div>
  </div>
</div>

<%= render partial: "challenges/featured", locals: { challenge: @challenge }, cache: true  if @challenge %>

<%= render partial: 'challenges/overview', locals: { challenge: @challenge }, cache: true if @challenge %>

<%= render partial: "suggestions/index", locals: { suggestions: @suggestions }, cache: true if @suggestions %>

<%= render partial: "challenges/engagement" %>

<div id='landing-community'>
  <div class='container padding-xxxl-vertical'>
    <div class='row'>
      <div class='col-md-10 col-md-offset-1'>

        <h2 class="section-title">Our Community</h2>
        <p class='section-description' style='margin-bottom: 2em'>It takes a village to tackle the most challenging barriers to young peopleâ€™s ability to learn and thrive. As such, we welcome all educators including classroom teachers, teacher leaders, coaches, administrators, support staff and out of school mentors into this online community.</p>


        <% t('home.testimonials').shuffle.each_slice(2) do |testimonials| %>
          <div class='row'>
            <% testimonials.each do |testimonial| %>
              <div class='col-sm-6'>
                <div class='well well-testimonial'>
                  <div class="media">
                    <div class='media-left'><%= image_tag "home/#{testimonial[:key]}.png", width: '100px' %></div>
                    <div class="media-body">
                      <p class='text-small text-experience'>"<%= testimonial[:quote] %>"</p>
                      <p class='text-small text-dark-gray'>
                        <strong><%= testimonial[:name] %>, <%= testimonial[:title] %></strong><br>
                        <%= testimonial[:organization] %><br>
                      </p>

                      <%= link_to "https://twitter.com/intent/user?screen_name=#{testimonial[:twitter]}", target: '_blank', class: 'text-small' do %>
                        <abbr><i class='fa fa-twitter-square fa-1-25x'></i></abbr>
                        <%= "@#{testimonial[:twitter]}" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
