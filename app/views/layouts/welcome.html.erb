  <%= favicon_link_tag 'favicon.png', type: 'image/png' %>
  <%= favicon_link_tag 'favicon.png', type: 'image/png', rel: 'apple-touch-icon' %>

  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "welcome" %>

  <%= render partial: 'layouts/shim', cache: true %>
  <%= render partial: 'layouts/google', cache: true if ENV['GA_KEY'].present? %>
  <%= render partial: 'layouts/heap', cache: true if ENV['HEAP_APP_ID'].present? %>
  <%= render partial: 'layouts/twitter', cache: true %>
  <%= render partial: 'shared/cards/facebook', cache: true %>

  <%= csrf_meta_tags %>
