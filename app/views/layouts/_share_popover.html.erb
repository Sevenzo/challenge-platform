<% url = user_signed_in? ? "#{url}?referrer_id=#{current_user.id}" : url %>

<ul class="share-popover" style='margin-bottom:0px'>
  <li><%= link_to "<i class='fa fa-twitter'></i>".html_safe, "https://twitter.com/intent/tweet?text=#{url_encode(strip_tags(title))}&url=#{url_encode(url)}&hashtags=#{hashtag}", target: '_blank' %></li>

  <li><%= link_to "<i class='fa fa-facebook'></i>".html_safe, "https://www.facebook.com/dialog/share?app_id=811290972280440&display=popup&href=#{url_encode(url)}&redirect_uri=#{url_encode(url)}", onclick: "javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=600');return false;" %></li>

  <li><%= link_to "<i class='fa fa-linkedin'></i>".html_safe, "http://www.linkedin.com/shareArticle?mini=true&url=#{url_encode(url)}&title=#{url_encode(strip_tags(title))}&summary=#{url_encode(strip_tags(description))}", onclick: "javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=600');return false;" %></li>

  <li style='padding-right:0px'><%= mail_to '', "<i class='fa fa-envelope'></i>".html_safe, {onclick: "javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;", subject: "Check out \"#{strip_tags(title)}\" on #{ENV.fetch('APP_NAME')}", body: "Here is the URL: #{url}"} %></li>
</ul>
