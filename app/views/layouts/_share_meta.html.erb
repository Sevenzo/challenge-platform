<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@<%= ENV.fetch('TWITTER_URL').split('/').last %>" />
<meta property="og:type" content="website" />
<meta property="og:site_name" content="<%= ENV.fetch('APP_NAME') %>" />

<% if @challenge.present? %>
  <meta property="og:title" content="<%= yield(:og_title) || @challenge.title %>" />
  <meta property="og:description" content="<%= yield(:og_description) || @challenge.description %>" />
  <meta property="og:url" content="<%= yield(:og_url) || challenge_url(@challenge) %>" />
  <meta property="og:image" content="<%= @challenge.banner.url %>" />
<% else %>
  <meta property="og:title" content="Join <%= ENV.fetch('APP_NAME') %>!" />
  <meta property="og:description" content="<%= ENV.fetch('APP_NAME') %> is an online workshop in innovation where teachers, coaches, and administrators tackle K-12's toughest challenges. The mission: turning innovative ideas into real solutions you can try in your school." />
  <meta property="og:url" content="<%= root_url %>" />
  <meta property="og:image" content="<%= asset_url('favicon.png') %>" />
<% end %>
