<%= render partial: 'challenges/header' %>

<div id='cookbook-overview'>
  <div class='container'>

    <%= render partial: 'cookbooks/header', cache: true %>

  </div>
</div>

<div id='cookbook-comments'>
  <div class='container'>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">

        <%= render partial: 'comments/discussion', locals: { commentable: @cookbook }, cache: true %>

      </div>
    </div>
  </div>
</div>

<div id='cookbook-share'>
  <div class='container'>
    <div class='row'>
      <div class='col-md-10 col-md-offset-1'>

        <h2 class='section-title text-submit'>Know people who have something to add to this conversation?</h2>
        <p class='section-description'>More people means more problems solved. Share this challenge!</p>

        <%= render partial: 'layouts/share_links', locals: { url: root_url, hashtag: @challenge.hashtag, tweet: "Make good ideas GREAT! Join the #{@challenge.title}.", title: "Make Good Ideas GREAT!", description: "Educators from across America are sharing amazing ideas on how to use video to support their learning. Now it's time to make those ideas real. Join the #{@challenge.title}.", subject: "Help make good ideas GREAT. Join the #{@challenge.title}" }, cache: true %>

      </div>
    </div>
  </div>
</div>
